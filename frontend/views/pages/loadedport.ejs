<%- include('../template/head')-%>

<body class="text-center">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <%- include('../template/nav')-%>
        <!--Include if statement-->
        <% if (body.realPortbond) { %>
        <h1 class="cover-heading">Investor <%=realPortselectedInv%>'s Bonds</h1>
            <div class="container bg-light text-dark">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Bond ID</th>
                            <th>Bond Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%portfolio.forEach(function(port) {%>
                        <tr>
                            <td><%=port.bondid%></td>
                            <td><%=port.bondname%></td>
                        </tr>
                        <%})%>
                    </tbody>
                </table>
            </div>
            <% } %>
            <% if (body.realPortstock) { %>
                <h1 class="cover-heading">Investor <%=realPortselectedInv%>'s Stocks</h1>
                    <div class="container bg-light text-dark">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Stock ID</th>
                                    <th>Stock Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%portfolio.forEach(function(port) {%>
                                <tr>
                                    <td><%=port.stockid%></td>
                                    <td><%=port.stockname%></td>
                                </tr>
                                <%})%>
                            </tbody>
                        </table>
                    </div>
                    <% } %>
        <%- include('../template/footer')-%>
    </div>

</body>
<script>
    window.onload = function() {
        document.getElementById('portfolio').classList.add('active');
      };
</script>
</html>